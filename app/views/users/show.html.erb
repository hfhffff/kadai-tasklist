<div class="row">
  <div class="col-xs-8">
    <h1>タスクリスト</h1>

      <ul>
        
      <% @task.each do |task| %>
        
        <li>
          <%= link_to task.id, task %>
          :
          <%= task.status %>
           &gt;
          <%= task.content %>
        </li>
        
      <% end %>
        
      </ul>

<%= link_to 'タスクを追加', new_task_path %>
  </div>
</div>